{
  "name": "AF TecHacker",
  "version": "1.0.0",
  "manifest_version": 2,
  "background": {
    "scripts": ["src/background.ts"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "extensao-techacker@fracassi.tech",
      "strict_min_version": "58.0"
    }
  },
  "permissions": [
    "alarms",
    "dns",
    "menus",
    "privacy",
    "storage",
    "tabs",
    "unlimitedStorage",
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "file://*/*"],
      "js": ["src/contentscript.ts"],
      "all_frames": true,
      "match_about_blank": true,
      "run_at": "document_start"
    }
  ],
  "browser_action": {
    "browser_style": false,
    "default_area": "navbar",
    "default_title": "AF TecHacker",
    "default_popup": "index.html"
  }
}
